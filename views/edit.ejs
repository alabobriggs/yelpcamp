<div class="container">
    <div class = "row">
        <h1 style="text-align:center ">Edit <%= campground.name %></h1>
        <div style = "width : 30%; margin : 0 auto ">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="post">
            <div class="form-group">
                <input type="text" class = "form-control" name="campground[name]" id="" value = "<%= campground.name %>">
            </div>
            <div class="form-group">
                <input type="text" class = "form-control"  name="campground[image]" id="" value = "<%= campground.image %>">
            </div>
            <div class="form-group">
                <input type="text" class = "form-control"  name="campground[description]" id="" value = "<%= campground.description %>">
            </div>
            <div class="form-group"> 
                <button class = "btn btn-lg btn-primary btn-block"type="submit">submit</button>
            </div>
            </form>
        <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>



